{
  "manifest_version": 3,
  "name": "KickKit",
  "version": "1.0.0",
  "description": "Kick.com i√ßin kanal takip, tema, chat filtresi ve multi-stream eklentisi",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://kick.com/*",
    "https://www.kick.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*", "https://www.kick.com/*"],
      "css": ["preload.css"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "multistream/index.html",
        "multistream/style.css",
        "multistream/app.js",
        "icons/*.png",
        "locales/*.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
